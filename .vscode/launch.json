{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Engine Demo (Clang 18)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/engine_demo",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: Build Project",
      "miDebuggerPath": "/usr/bin/gdb"
    },
